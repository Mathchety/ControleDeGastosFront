@startuml DiagramaCasosUso
title Diagrama de Casos de Uso
left to right direction
skinparam packageStyle rectangle

' Actors
actor "Usuário" as User

rectangle "Aplicação Controle de Gastos" {
    usecase "Logar" as UC_Login
    usecase "Registrar Conta" as UC_Register

    usecase "Escanear QR Code" as UC_Scan
    usecase "Visualizar Preview" as UC_Preview
    usecase "Confirmar Nota" as UC_Confirm
    usecase "Adicionar Nota Manual" as UC_Manual

    usecase "Ver Histórico" as UC_History
    usecase "Visualizar Detalhes da Nota" as UC_ViewDetail
    usecase "Excluir Nota" as UC_DeleteReceipt

    usecase "Gerenciar Categorias" as UC_ManageCategories
    usecase "Visualizar Estatísticas" as UC_Stats

    usecase "Gerenciar Perfil" as UC_Profile
    usecase "Alterar Avatar" as UC_Avatar
    usecase "Alterar Senha / Email" as UC_Credentials

    usecase "Configurações / Excluir Conta" as UC_Settings
}

' Primary relationships
User --> UC_Login
User --> UC_Register

User --> UC_Scan
User --> UC_Preview
User --> UC_Confirm
User --> UC_Manual

User --> UC_History
User --> UC_ViewDetail
User --> UC_DeleteReceipt

User --> UC_ManageCategories

User --> UC_Stats

User --> UC_Profile
User --> UC_Avatar
User --> UC_Credentials

User --> UC_Settings


' Include / Extend relationships
UC_Scan ..> UC_Preview : <<include>>
UC_Confirm ..> UC_Preview : <<include>>
UC_Profile ..> UC_Credentials : <<include>>



@enduml
